<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        android:id="@+id/cardview_peticion_quedada"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="6sp"
        android:layout_marginHorizontal="10sp"
        android:backgroundTint="@color/azul"
        app:cardElevation="12sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="377dp"
                android:layout_height="124dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="411dp"
                    android:layout_height="69dp"
                    android:layout_marginTop="17sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/deporte_texto_peticion_quedada"
                        android:layout_width="match_parent"
                        android:layout_height="69dp"
                        android:layout_marginTop="6sp"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="40sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7sp"
                    android:layout_marginRight="30sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/plazas_texto_peticion_quedada"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:gravity="center"
                        android:text="4"
                        android:textColor="@color/black"
                        android:textSize="60sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1sp"
                        android:gravity="center"
                        android:text="@string/plazas2"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2sp"
                android:background="@android:color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@color/azul_claro"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="18sp"
                    android:layout_marginTop="8sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="47dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:layout_weight="1"
                        android:text="@string/ubicacion"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/lugar_texto_peticion_quedada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4sp"
                        android:layout_marginTop="6sp"
                        android:layout_weight="2"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:background="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="62dp"
                    android:layout_marginHorizontal="17sp"
                    android:layout_marginLeft="16sp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="13dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:text="@string/fecha"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/fecha_texto_peticion_quedada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@android:color/white" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="9sp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:text="@string/hora"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/hra_texto_peticion_quedada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="12sp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="8sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_weight="1"
            android:text="@string/autor_quedada"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/autor_texto_peticion_quedada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="6sp"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="12sp"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22sp"
        android:layout_marginTop="19sp"
        android:text="@string/plazas_reserva"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
        android:id="@+id/plazas_peticion_quedada"
        android:layout_width="107dp"
        android:layout_height="28sp"
        android:layout_marginLeft="255sp"
        android:layout_marginTop="22sp"
        android:textSize="16sp"
        app:snp_buttonIconLeft="@drawable/menu_left"
        app:snp_buttonIconRight="@drawable/menu_right"
        app:snp_maxValue="20"
        app:snp_minValue="0"
        app:snp_orientation="horizontal"
        app:snp_stepSize="1"
        app:snp_updateInterval="1"
        app:snp_value="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginHorizontal="35sp"
        android:layout_marginTop="40sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancelar_peticion_quedada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="19sp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:elevation="10sp"
            android:textSize="16sp"
            android:text="@string/cancelar" />

        <Button
            android:id="@+id/btn_enviar_peticion_quedada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19sp"
            android:paddingHorizontal="4sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_weight="1"
            android:elevation="10sp"
            android:text="@string/enviar" />


    </LinearLayout>


</LinearLayout>