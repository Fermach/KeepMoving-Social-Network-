<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <android.support.v7.widget.CardView
        android:id="@+id/cardview_peticion_quedada"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="8sp"
        app:cardCornerRadius="6sp"
        android:layout_marginHorizontal="10sp"
        android:backgroundTint="@color/gris"
        app:cardElevation="6sp"
        android:layout_width="match_parent"
        android:layout_height="180sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:text="@string/actividad"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginLeft="14sp"
                        android:layout_weight="2"
                        android:id="@+id/deporte_texto_peticion_quedada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:layout_weight="1"
                        android:text="@string/plazas_quedada"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginLeft="14sp"
                        android:layout_weight="2"
                        android:id="@+id/plazas_texto_peticion_quedada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_marginTop="12sp"
                android:background="@android:color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8sp"
                android:orientation="vertical"
                android:paddingBottom="4dp">

                <LinearLayout
                    android:layout_marginTop="8sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6sp"
                        android:layout_weight="1"
                        android:text="@string/ubicacion"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/lugar_texto_peticion_quedada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="14sp"
                        android:layout_marginTop="6sp"
                        android:layout_weight="2"
                        android:textColor="@color/brown1"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="5dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:text="@string/fecha"
                            android:textColor="@color/brown1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/fecha_texto_peticion_quedada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown1"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6sp"
                            android:text="@string/hora"
                            android:textColor="@color/brown1"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/hra_texto_peticion_quedada"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/brown1"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="12sp"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="358dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="8sp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6sp"
            android:layout_weight="1"
            android:text="@string/autor_quedada"
            android:textColor="@color/brown1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/autor_texto_peticion_quedada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="6sp"
            android:layout_weight="2"
            android:textColor="@color/brown1"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_marginTop="12sp"
        android:background="@android:color/black" />

    <TextView
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22sp"
        android:layout_marginTop="19sp"
        android:text="@string/plazas_reserva"
        android:textColor="@color/brown1"
        android:textSize="16sp" />

    <com.michaelmuenzer.android.scrollablennumberpicker.ScrollableNumberPicker
        android:id="@+id/plazas_peticion_quedada"
        android:layout_width="107dp"
        android:layout_height="28sp"
        android:layout_marginLeft="255sp"
        android:layout_marginTop="22sp"
        android:textSize="16sp"
        app:snp_buttonIconLeft="@drawable/menu_left"
        app:snp_buttonIconRight="@drawable/menu_right"
        app:snp_maxValue="20"
        app:snp_minValue="0"
        app:snp_orientation="horizontal"
        app:snp_stepSize="1"
        app:snp_updateInterval="1"
        app:snp_value="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_marginHorizontal="35sp"
        android:layout_marginTop="140sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancelar_peticion_quedada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="19sp"
            android:layout_weight="1"
            android:elevation="10sp"
            android:textSize="16sp"
            android:text="@string/cancelar" />

        <Button
            android:id="@+id/btn_enviar_peticion_quedada"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19sp"
            android:textSize="16sp"
            android:layout_weight="1"
            android:elevation="10sp"
            android:text="@string/enviar" />


    </LinearLayout>


</LinearLayout>