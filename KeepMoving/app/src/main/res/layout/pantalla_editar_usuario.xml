<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.fermach.keepmoving.MainActivity.MainActivity"
    android:weightSum="1"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:background="@color/azul_claro"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fab_editar_usuarioImagen"
            android:layout_margin="16sp"
            android:layout_width="match_parent"
            android:src="@drawable/user"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:civ_border_color="@android:color/black"
            app:civ_border_width="2sp"
            android:elevation="10sp"
            />


    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2sp"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_marginHorizontal="30sp"
        android:layout_marginTop="25sp"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="17sp"
            android:textColorHint="@android:color/black"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/editText_nombreUsuario_editar_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/intr_nombre"
                android:inputType="text"
                android:maxLength="30"
                android:textColorHint="@android:color/black"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="17sp"
            android:textColorHint="@android:color/black"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/editText_apellidosUsuario_editar_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/intr_apellidos"
                android:inputType="text"
                android:maxLength="30"
                android:textColorHint="@android:color/black"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="17sp"
            android:textColorHint="@android:color/black"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/editText_aficionesUsuario_editar_usuario"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="6sp"
                android:hint="@string/int_aficiones"
                android:inputType="text"
                android:maxLength="45"
                android:textColorHint="@android:color/black"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="17sp"
            android:textColorHint="@android:color/black"
            app:errorEnabled="true">

            <EditText
                android:id="@+id/editText_biografiaUsuario_editar_usuario"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:hint="@string/intr_bio"
                android:inputType="text"
                android:maxLength="40"
                android:textColorHint="@android:color/black"
                android:textSize="17sp" />
        </android.support.design.widget.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35sp"
        android:layout_marginTop="27sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_atras_editar_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="19sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:elevation="10sp"
            android:text="@string/atras" />

        <Button
            android:id="@+id/btn_guardar_editar_usuario"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19sp"
            android:layout_weight="1"
            android:elevation="10sp"
            android:text="@string/guardar" />
    </LinearLayout>

</LinearLayout>