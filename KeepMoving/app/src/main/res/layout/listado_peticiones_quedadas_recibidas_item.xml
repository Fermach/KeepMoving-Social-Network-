<?xml version="1.0" encoding="utf-8"?>

 <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardview_peticion_quedada_recibida"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6sp"
    android:layout_marginHorizontal="10sp"
    android:backgroundTint="@color/gris"
    app:cardElevation="6sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4sp"
        android:layout_marginRight="4sp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/estado_texto_peticion_quedada_recibida_item"
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingBottom="4sp"
            android:layout_height="wrap_content"
            android:text="@string/estado"
            android:textColor="@color/brown1"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@android:color/black" />
         <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginLeft="4sp"
           android:layout_marginRight="4sp"
           android:orientation="horizontal">

             <LinearLayout
                 android:layout_width="110dp"
                 android:layout_height="match_parent"
                 android:orientation="vertical">

                 <de.hdodenhof.circleimageview.CircleImageView
                     android:id="@+id/fab_usuarioImagen_perfil_quedada_recibida"
                     android:layout_width="81dp"
                     android:layout_height="73dp"
                     android:layout_alignParentTop="true"
                     android:layout_centerHorizontal="true"
                     android:layout_margin="14sp"
                     android:elevation="10sp"
                     android:src="@drawable/user"
                     app:civ_border_color="@android:color/black"
                     app:civ_border_width="1sp" />

             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="101dp"
                 android:orientation="vertical">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="101dp"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/nombre_autor_quedada_recibida_item"
                         android:layout_width="206dp"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10sp"
                         android:layout_marginTop="15sp"
                         android:layout_weight="2"
                         android:text="nombre"
                         android:textColor="@color/brown1"
                         android:textSize="16sp" />
                 </LinearLayout>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="101dp"
                     android:layout_weight="1"
                     android:orientation="horizontal">

                     <TextView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10sp"
                         android:layout_weight="2"
                         android:text="@string/plazas_solicitadas"
                         android:textColor="@color/brown1"
                         android:textSize="16sp" />

                     <TextView
                         android:id="@+id/plazas_solicitadas_quedada_recibida_item"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginLeft="10sp"
                         android:layout_weight="2"
                         android:text="plazas"
                         android:textColor="@color/brown1"
                         android:textSize="16sp" />
                 </LinearLayout>
             </LinearLayout>

         </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@android:color/black" />


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="8sp"
                android:text="@string/actividad"
                android:textColor="@color/brown1"
                android:textSize="16sp" />

            <TextView
                android:layout_marginLeft="14sp"
                android:layout_weight="2"
                android:id="@+id/deporte_texto_peticion_quedada_recibida_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:textColor="@color/brown1"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="154dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:layout_weight="1"
                android:text="@string/plazas_iniciales_quedada"
                android:textColor="@color/brown1"
                android:textSize="16sp" />

            <TextView
                android:layout_marginLeft="14sp"
                android:layout_weight="2"
                android:id="@+id/plazas_texto_peticion_quedada_recibida_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6sp"
                android:textColor="@color/brown1"
                android:textSize="16sp" />
        </LinearLayout>

     </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="12sp"
            android:background="@android:color/black" />


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8sp"
        android:orientation="vertical"
        android:paddingBottom="4dp">

         <LinearLayout
             android:layout_marginTop="8sp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="6sp"
                 android:layout_weight="1"
                 android:text="@string/ubicacion"
                 android:textColor="@color/brown1"
                 android:textSize="16sp" />

             <TextView
                 android:id="@+id/lugar_texto_peticion_quedada_recibida_item"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="14sp"
                 android:layout_marginTop="6sp"
                 android:layout_weight="2"
                 android:textColor="@color/brown1"
                 android:textSize="16sp" />
         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="6sp"
                     android:text="@string/fecha"
                     android:textColor="@color/brown1"
                     android:textSize="16sp" />

                 <TextView
                     android:id="@+id/fecha_texto_peticion_quedada_recibida_item"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/brown1"
                     android:textSize="16sp" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:orientation="vertical">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="6sp"
                     android:text="@string/hora"
                     android:textColor="@color/brown1"
                     android:textSize="16sp" />

                 <TextView
                     android:id="@+id/hra_texto_peticion_quedada_recibida_item"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/brown1"
                     android:textSize="16sp" />
             </LinearLayout>
         </LinearLayout>
     </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:layout_marginTop="5sp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/layoutControlar_peticion"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_rechazar_peticion_recibida_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rechazar"
                android:textColor="@color/brown1"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_aceptar_peticion_recibida_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4sp"
                android:layout_weight="1"
                android:text="@string/confirmar"
                android:textColor="@color/brown1"
                android:textSize="16sp" />
        </LinearLayout>
     </LinearLayout>


</android.support.v7.widget.CardView>
